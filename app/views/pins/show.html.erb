<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/3.2.1/css/font-awesome.min.css" media="all" rel="stylesheet" type="text/css">

<%= link_to 'Back', pins_path %>

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading center">
				<%= image_tag @pin.image.url(:medium) %>
			</div>
			<div class="panel-body">
				<p>
					<%= @pin.description %>
				</p>
				<p>
					<%- if @pin.user%>
					<strong><%= @pin.user.twitter_handle ? @pin.user.twitter_handle_display : @pin.user.email %></strong>
					<% end %>
				</p>

				<% if @pin.user == current_user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> 
				<% end %>
				<%= link_to "https://www.facebook.com/dialog/feed?app_id=323761284454080&display=popup&caption=#{@pin.description}&link=#{request.protocol}#{request.host_with_port}#{pin_path(@pin)}&redirect_uri=#{request.protocol}#{request.host_with_port}&picture=#{@pin.image.url(:medium)}" do %>
		  			<button class="btn btn-facebook"><i class="fa fa-facebook"></i> | Share</button>
		 		<%end%>
		  		<%= link_to "https://twitter.com/intent/tweet?text=#{@pin.description} %23Pinteresting,Chk it out on#{request.protocol}#{request.host_with_port}#{pin_path(@pin)}" do %>
		 			<button class="btn btn-twitter"><i class="fa fa-twitter"></i> | Share</button>
		 		<%end%>
			</div>
		</div>
	</div>
</div>